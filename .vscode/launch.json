  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "debug nest",
      "runtimeExecutable": "npm",
      "args": [
          "run",
          "start:dev",
      ],
      "skipFiles": [
          "<node_internals>/**"
      ],
      "console": "integratedTerminal",
    },
    {
      "name": "Attach to Chrome",
      "port": 9229,
      "request": "attach",
      "type": "node",
    },
    {
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/debug.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "stopOnEntry": true
    }
  ]
}